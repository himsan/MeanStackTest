{{!-- Login Page --}}
<div class="container">
	<div class="col-lg-offset-4 col-md-offset-4 col-sm-12 col-xs-12 col-md-4 col-lg-4 vertical-center">
		<div class="row">
		<h3 class="text-center">Login</h3>
		<form class="form-signin" action="login_action" method="post" role="form" data-toggle="validator" >
			{{#if error}}
			<p class="text-danger">{{error}}</p>
			{{/if}}
				<div class="form-group">
					<label for="productTitle" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"></label>
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<span class="error"></span>
						 <div class="input-group">
						 	<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
							<input type="email" name="email" class="form-control" placeholder="Email Address" value="" required >
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="productTitle" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"></label>
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<span class="error"></span>
						<div class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
							<input type="password" name="password" class="form-control" placeholder="Password" value="" required >
						</div>
					</div>
				</div>
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="form-group">
						<button type="submit" class="btn button btn-block loginBtn"> Login </button>
					</div>
					<div class="form-group text-right frgtbtn">
						<a href="/api/bookStore/v0/signup" class="forgot-password ">SignUp?</a>
					</div>
				</div>
				</div>
			</div>
		</form>
	</div>
	</div>
</div>